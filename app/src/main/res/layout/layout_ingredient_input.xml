<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/ingredient_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size_large"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toStartOf="@id/add_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/fab_background"
        android:elevation="1dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ingredient_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>